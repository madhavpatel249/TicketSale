{
  "name": "use-ripples",
  "version": "0.0.14",
  "license": "MIT",
  "description": "ripple effect for react",
  "keywords": [
    "react",
    "ripple",
    "ripple-effect",
    "react-hooks",
    "material-design",
    "minimal",
    "zero-dependency"
  ],
  "repository": {
    "type": "git",
    "url": "hota1024/use-ripples"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@rollup/plugin-eslint": "^8.0.1",
    "@types/jest": "^26.0.20",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.37.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependency": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
